# API Config
API_HOST=0.0.0.0
API_PORT=8000
ENVIRONMENT=development

# Paths - TUDO no storage
TEMP_DIR=/storage/legendas-master/temp
MODEL_PATH=/storage/legendas-master/models

# Whisper - Modo local
WHISPER_MODEL_FREE=base
WHISPER_MODEL_PAID=small  # Usar small no lugar de large para testes
WHISPER_DEVICE=cpu  # Mudar para cuda se tiver GPU
WHISPER_COMPUTE_TYPE=int8  # Mais leve para CPU

# Banco local (SQLite para testes)
DATABASE_URL=sqlite:////storage/legendas-master/test_database.db

# Storage local (simular R2)
USE_LOCAL_STORAGE=true
LOCAL_STORAGE_PATH=/storage/legendas-master/local_storage

# Desabilitar serviços externos para teste
SKIP_PAYMENT=true
SKIP_EMAIL=true
SKIP_R2=true

# OpenAI (deixar vazio para testes sem tradução)
OPENAI_API_KEY=

# Limites mais altos para desenvolvimento
FREE_MINUTES_LIMIT=1000
MAX_FILE_SIZE_MB_FREE=500